@model Users

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Update User</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </div>
        </div>
        <hr />
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container">
        <form method="post" asp-action="EditUser" asp-controller="Users">
            <div class="row my-2">
                <input asp-for="UserID" hidden />
                <div class="col-md-6 form-group">
                    <label class="form-label">Name <span class="text-danger fw-bold" asp-validation-for="UserName"></span></label>
                    <input class="form-control" asp-for="UserName" />
                </div>
                <div class="col-md-6 form-group">
                    <label class="form-label">Password <span class="text-danger fw-bold" asp-validation-for="Password"></span></label>
                    <input class="form-control" asp-for="Password" />
                </div>
                <div class="col-md-6 form-group">
                    <label class="form-label" hidden>User Status <span class="text-danger fw-bold" asp-validation-for="UserStatus"></span></label>
                    <input class="form-control" asp-for="UserStatus" value="1" hidden />
                </div>
                <div class="col-md-12 my-2">
                    <button type="submit" class="btn btn-primary">Update User</button>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- /.content -->